---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { Marquee } from '../components/react/Marquee';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { LocationCard } from '@/components/react';
import Card from '@/components/Card.astro';
import Who from './components/Who.astro';
import Intro from './components/Intro.astro';
---

<!doctype html>
<html lang='en'>
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class='bg-hive-black flex min-h-screen w-full flex-col items-center overflow-x-clip bg-neutral-950 bg-cover min-[560px]:pt-22'
    >
        <!-- class='bg-cover bg-fixed backdrop-blur-[2px] flex flex-col items-center justify-center' -->
        <Header />
        <main
            class='relative mt-0 flex w-full max-w-xl flex-1 flex-col justify-center px-4 sm:pb-8 md:mt-6 md:max-w-screen-lg'
        >
            <section class='flex flex-col gap-6'>
                <div class='flex flex-col gap-16 md:flex-row'>
                    <div
                        class='flex w-full flex-col justify-end gap-6 md:w-1/2'
                    >
                        <Who />
                        <LocationCard
                            client:visible
                            countryCode='BR'
                            location='Porto Alegre'
                            temperature={0}
                            weather='cloudy'
                        />
                    </div>
                    <div class='w-full md:w-1/2'>
                        <Intro />
                    </div>
                </div>
            </section>
            <section>
                <!-- <Marquee client:visible /> -->
                <section class='grid gap-6 grid-cols-12'>
                    <Card classname='overflow-visible col-span-12'>
                        <div
                            class='flex flex-col gap-2 items-center justify-center'
                        >
                            <p class='text-xl text-neutral-300'>
                                Latest blog post
                            </p>
                            <div class='bg-neutral-800 text-5xl'>
                                <div>WIP</div>
                            </div>
                        </div>
                    </Card>
                </section>
                <Footer />
            </section>
        </main>
    </body>
</html>
