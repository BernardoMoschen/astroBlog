---
import Portrait from '@/assets/portrait_me.jpg';
import { Picture } from 'astro:assets';
---

<div
    id='who'
    class='w-full max-h-full flex rounded-xl bg-neutral-800 p-2 text-white shadow-sm shadow-black hover:text-neutral-500'
>
    <div
        class='max-w-full h-full flex flex-1 flex-row-reverse rounded-lg bg-neutral-900 p-2 gap-6'
    >
        <div
            class='-mr-10 -rotate-3 hover:scale-105 hover:-rotate-1 stack flex-1 flex z-10 relative w-1/2 h-full items-center justify-center'
        >
            <div class='card-stack'>
                <Picture
                    class='image-stack'
                    alt='Bernardo            Moschen'
                    src={Portrait}
                    width={500}
                    height={600}
                />
            </div>
        </div>
        <div class='flex flex-1 shrink-0 flex-col p-8 pr-4'>
            <div
                class='fade-in-up text-2xl font-bold tracking-tight text-white'
            >
                Bernardo Moschen
            </div>
            <div
                class='fade-in-up my-4 h-[1px] w-full bg-neutral-700'
                style='transform: none; opacity: 1;'
            >
            </div>
            <p
                class='fade-in-up text-lg leading-snug text-balance text-neutral-400'
            >
                I like to build useful stuff, break things on purpose, and
                obsess over clean code and clever UIs.
            </p>
        </div>
    </div>
</div>
